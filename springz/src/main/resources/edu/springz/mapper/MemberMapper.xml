<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.springz.mapper.MemberMapper">
	<resultMap type="edu.springz.domain.MemberVO" id="memberMap">
		<!-- property VO에 있는 이름 column 디비에 있는 이름 -->
		<id property="userid" column="userid" /> <!-- 여기는 조인조건인 컬럼명 써준다 -->
		<result property="userid" column="userid" />
		<result property="userpw" column="userpw" />
		<result property="userName" column="username" />
		<result property="enabled" column="enabled" />
		<result property="regDate" column="regdate" />
		<result property="updateDate" column="updatedate" />
		<collection property="authList" resultMap="authMap" >
		</collection>
	</resultMap>
	
	<resultMap type="edu.springz.domain.AuthVO" id="authMap">
		<result property="userid" column="userid" />
		<result property="auth" column="auth" />
	</resultMap>
	

	<select id="read" resultMap="memberMap">
		 SELECT mem.userid, userpw, username, enabled, regdate, updatedate, auth
		 FROM tbl_memo_member mem, tbl_memo_member_auth auth
  		 where mem.userid = auth.userid 
  		 AND mem.userid = #{userid }
	
	</select>

</mapper>